<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.blanke.xandroidsocket"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TcpclientActivity"
            android:label="@string/title_activity_tcpclient">
        </activity>
        <activity android:name=".TcpserverActivity"/>
        <activity android:name=".UdpclientActivity"/>
        <activity android:name=".UdpserverActivity"/>
        <activity android:name=".TestActivity">
        </activity>
    </application>

</manifest>